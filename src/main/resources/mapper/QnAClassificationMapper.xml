<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.shop.mapper.QnAClassificationMapper">

    <select id="findAll" resultType="QnAClassification">
        SELECT *
        FROM qnaClassification
    </select>

    <insert id="insertClassification">
        INSERT INTO QnAClassification(qnaClassificationName)
        VALUES(#{name})
    </insert>

    <delete id="deleteClassification">
        DELETE FROM QnAClassification
        WHERE id = #{id}
    </delete>
</mapper>