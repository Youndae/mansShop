<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.shop.mapper.ProductThumbnailMapper">

    <select id="findAllByProductId" resultType="String">
        SELECT imageName
        FROM productThumbnail
        WHERE productId = #{productId}
    </select>

    <insert id="saveThumbnails" parameterType="map">
        {CALL insert_product_thumbnails(
                #{thumbnails, jdbcType=ARRAY, jdbcTypeName="PRODUCT_THUMBNAIL_OBJ_LIST", typeHandler=org.shop.mapper.typeHandler.ProductThumbnailTypeHandler}
        )}
    </insert>

    <delete id="deleteByImageNames" parameterType="String">
        DELETE FROM productThumbnail
        <where>
            <foreach collection="list" item="item" open="" close="" separator="OR">
                (imageName = #{imageName})
            </foreach>
        </where>
    </delete>
</mapper>