<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.shop.mapper.ProductLikeMapper">

    <select id="countByUserIdAndProductId" resultType="boolean">
        SELECT CASE
            WHEN count(*) > 0 THEN 1
            ELSE 0
        END
        FROM productLike
        WHERE PRODUCTID = #{productId} AND userId = #{userId}
    </select>

    <select id="findById" resultType="ProductLike">
        SELECT *
        FROM productLike
        WHERE id = #{id}
    </select>

    <delete id="deleteById">
        DELETE FROM productLike
        WHERE id = #{id}
    </delete>

    <insert id="likeProduct" parameterType="ProductLike">
        INSERT INTO productLike(userId, productId)
        VALUES (#{userId}, #{productId})
    </insert>

    <delete id="deLikeProduct" parameterType="ProductLike">
        DELETE FROM productLike
        WHERE userId = #{userId}
            AND productId = #{productId}
    </delete>

</mapper>